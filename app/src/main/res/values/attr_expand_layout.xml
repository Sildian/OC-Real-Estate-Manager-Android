<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandLayout">
        <attr name="expand_text" format="string"/>
        <attr name="expand_text_padding" format="dimension"/>
        <attr name="expand_textSize" format="dimension"/>
        <attr name="expand_textColor" format="color"/>
        <attr name="expand_textStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="expand_status">
            <flag name="collapsed" value="0"/>
            <flag name="expanded" value="1"/>
        </attr>
    </declare-styleable>
</resources>